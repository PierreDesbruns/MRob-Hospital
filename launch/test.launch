<launch>
    <arg name="world_name" default="$(find RobotFollowColor)/worlds/turtlebot3_house.world" />
    <arg name="has_marker" default="false" />
    <arg name="robot_description" default="robot_description"/>


    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name" value="$(arg world_name)" />
        <arg name="paused" value="false" />
        <arg name="use_sim_time" value="true" />
        <arg name="gui" value="true" />
        <arg name="verbose" value="false" />
        <arg name="debug" value="false" />
    </include>

    <include file="$(find RobotFollowColor)/launch/include/robot.xml">
        <arg name="name" value="leader" />
        <arg name="x" value="0.8" />
        <arg name="y" value="-1.76" />
        <arg name="camera_on" value="true" />
    </include>

</launch>